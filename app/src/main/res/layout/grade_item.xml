<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginVertical="40dp"
        android:background="@drawable/round_table">

        <TextView
            android:id="@+id/materia"
            android:layout_width="115sp"
            android:layout_height="25sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingStart="12dp"
            android:textColor="@color/colorAccent"
            android:textSize="19dp"
            android:singleLine="true"
            android:ellipsize="marquee"/>

        <TextView
            android:id="@+id/docente"
            android:layout_width="115sp"
            android:layout_height="25sp"
            android:layout_below="@+id/materia"
            android:paddingStart="13dp"
            android:textColor="@color/colorAccent"
            android:textSize="17dp"
            android:singleLine="true"
            android:ellipsize="marquee"/>

        <TextView
            android:id="@+id/horario"
            android:layout_width="115sp"
            android:layout_height="20sp"
            android:layout_below="@+id/docente"
            android:paddingStart="14dp"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            />

        <TableLayout
            android:layout_width="224dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="end">

            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Primero"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Segundo"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Tercero"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Final"
                    android:textColor="@color/colorAccent" />
            </TableRow>

            <TableRow android:layout_weight="3">

                <TextView
                    android:id="@+id/nota1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/nota2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/nota3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/notaFinal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorAccent" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</LinearLayout>