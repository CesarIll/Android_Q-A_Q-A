<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:weightSum="10"
    tools:context=".CampusActivity">

    <Button
        android:id="@+id/campus"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="23dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="CAMPUS"
        android:onClick="mostrarPopup"
        android:textColor="@color/colorAccent" />

    <ImageView
        android:id="@+id/negro"
    android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/imagennegra" />

    <uk.co.senab.photoview.PhotoView
        android:id="@+id/mapa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/campus"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp" />
    <ImageView
        android:id="@+id/upblogo"
        app:srcCompat="@drawable/upblogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/campus"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="30dp"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/circle_button"
        android:layout_margin="20dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        android:id="@+id/parkbutton"
        android:src="@drawable/parqueo"
        />
</RelativeLayout>